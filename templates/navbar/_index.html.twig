    {# {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
   
    {% endif %} #}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
 
        {% if app.user.avatar == null %}
            <div class="dropdown">
                <img class="noAvatar" src="https://www.photoprof.fr/images_dp/photographes/profil_vide.jpg" style="width:60px; border-radius: 100%; "/>
                <p>{{ app.user.firstname  }} {{ app.user.lastname }}</p>
                <div class="dropdown-content">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="link-user" href={{path('admin')}}>Mon compte Admin</a><br/><br/>
                    {% endif %}
                    <a class="link-user" href={{path('app_dashboard_client')}}>Mon compte client</a>
                </div>
            </div>
        {% else %}

         {# upload avatar #}

            <div class="dropdown">
                <img class="avatar" src={{ asset('uploads/avatars/' ~ app.user.avatar) }} alt="profil" style="width:60px; border-radius: 100%; ">
