<div class="navbar-menu">
    <a class="link-content" href={{path('app_home')}}><img class="logo" src="{{ asset('images/EYES_CONTACT.jpg')}}" alt="logo_eyes_contact"></a>

    {% for categorie in categories%}
    <div class="">
        <a class="title-nav" href={{path('app_product', {id: categorie.id})}}>{{ categorie.name }}</a>
    </div>
    {% endfor %}

    <div class="">
       <a class="link-content" href={{path('app_contact')}}><span class="title-nav">Contact</span> </a>
